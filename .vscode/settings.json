{
    // LaTeX Workshop settings for output directory
    "latex-workshop.latex.outDir": "./export",
    "latex-workshop.latex.clean.subfolder.enabled": true,
    // Use the recipe that explicitly runs Makeglossaries so the editor
    // build will always generate the .acr file when building from the GUI.
    "latex-workshop.latex.recipe.default": "pdfLaTeX ➞ Makeglossaries ➞ Biber ➞ pdfLaTeX × 2",
    
    // This ensures the PDF is still accessible
    "latex-workshop.view.pdf.internal.synctex.keybinding": "double-click",
    
    // Standard recipe with output directory support
    "latex-workshop.latex.tools": [
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-output-directory=export",
                "%DOC%"
            ]
        },
        {
            "name": "biber",
            "command": "biber",
            "args": [
                "--input-directory=export",
                "--output-directory=export",
                "%DOCFILE%"
            ]
        }
        ,
        {
            "name": "makeglossaries",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-Command",
                "cd 'export'; makeglossaries %DOCFILE%"
            ]
        },
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "pdfLaTeX ➞ Biber ➞ pdfLaTeX × 2",
            "tools": [
                "pdflatex",
                    "biber",
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "pdfLaTeX ➞ Makeglossaries ➞ Biber ➞ pdfLaTeX × 2",
            "tools": [
                "pdflatex",
                "makeglossaries",
                "biber",
                "pdflatex",
                "pdflatex"
            ]
        }
    ]
}
